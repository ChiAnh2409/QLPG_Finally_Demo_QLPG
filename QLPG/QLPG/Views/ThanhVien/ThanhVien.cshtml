                    <ul class=" navbar-nav">
                        <li>
                            <a><i style='font-size:26px' class="menu-icon fa fa-home fa-fw"></i> Admin @Session["username"].ToString() <span style='font-size:12px' color class="ti-heart"></span> </a>
                        </li>
