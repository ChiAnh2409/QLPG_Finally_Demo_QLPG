                            <div class="page-title">
                                <h1>Danh Sách Thành Viên</h1>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="page-header float-right">
                            <div class="page-title">
                                <div class="form-inline">
                                    <form class="search-form" method="post" action="@Url.Action("TimKiemTV", "ThanhVien")">
                                        <input class="form-control mr-sm-2" type="text" placeholder="Nhập tên..." name="search" aria-label="Search">
                                        <input class="btn btn-outline-secondary" type="submit" value="Tìm kiếm">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="content">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <button class="btn btn-outline-primary" onclick="location.href='/ThanhVien/ThemTV'">Thêm Thành Viên</button>
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table" class="table">
                                    <thead>
                                        <tr>
                                            <th>id</th>
                                            <th>Tên thành viên</th>
                                            <th>SĐT</th>
                                            <th>Email</th>
                                            <th>Tên gói tập</th>
                                            <th>Ngày tạo</th>
                                            <th>Hành động</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.vien)
                                        {
                                            // Check if NgayTao is different from the current date
                                            string rowClass = item.NgayTao?.Date != DateTime.Now.Date ? "" : "alert-primary";

                                            <tr id="tv-@item.id_TV" class="@rowClass">
                                                <!-- Set the ID for each table row -->
                                                <td>@item.id_TV</td>
                                                <td>@item.TenTV</td>
                                                <td>@item.SDT</td>
                                                <td>@item.Email</td>
                                                <td>@item.TenGT</td>
                                                <td>@(item.NgayTao?.ToString("yyyy-MM-dd") ?? "")</td>
                                                <td>
                                                    <button class="btn btn-outline-warning btn-sm">@Html.ActionLink("sửa", "SuaTV", new { id = item.id_TV })</button>
                                                    <button class="btn btn-outline-danger btn-sm" onclick="XoaTV(@item.id_TV)">xóa</button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <script>
                                    function XoaTV(id)
                                    {
                                        if (confirm('Bạn có chắc muốn xóa thành viên này không '))
                                        {
                                            $.ajax
                                                ({
                                                    url: '@Url.Action("XoaTV", "ThanhVien")',
                                                    type: 'POST', // Phương thức POST
                                                    data: { id: id }, // Truyền tham số id
                                                    success: function (result)
                                                      { location.reload(); },
                                                    error: function ()
                                                      { alert('Đã xảy ra lỗi khi xóa thành viên.'); }
                                                });
                                        }
                                    }
                                </script>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
