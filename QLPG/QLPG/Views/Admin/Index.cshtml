                            <!-- Existing script imports remain unchanged -->

                            <script>
                                 var doanhThuTheoThangNam = @Html.Raw(Json.Encode(doanhThuTheoThangNam));
                                 var selectedYear = Model.chiTietDK_.Select(ct => ct.NgayBatDau?.Year).Distinct().OrderBy(y => y).FirstOrDefault() ?? DateTime.Now.Year;

                               function updateData() {
                                  selectedYear = document.getElementById("selectYear").value;
                                  updateTable(selectedYear);
                                  updateChart(selectedYear);
                               }

                                  function updateTable(selectedYear) {
                                       var tableBody = document.getElementById("revenueTable").getElementsByTagName('tbody')[0];
                                           tableBody.innerHTML = "";

                                           doanhThuTheoThangNam
                                                  .filter(function (item) {
                                                         return selectedYear === "0" || item.Nam == selectedYear;
                                                  })
                                                        .forEach(function (item) {
                                                            var row = tableBody.insertRow(tableBody.rows.length);
                                                            var cell1 = row.insertCell(0);
                                                            var cell2 = row.insertCell(1);

